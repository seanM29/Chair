<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seanshend.myapplication.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="HomePage"
        android:textSize="20sp"
        android:id="@+id/textView" />


    <com.seanshend.view.pieview.PieView
        android:layout_width="100dp"
        android:layout_height="210dp"
        android:id="@+id/test"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="changeType"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="To bend forward and down from the  backmiddle of the back"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/test"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="42dp"
        android:id="@+id/textView3"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/test"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"

        android:textSize="15sp"

        android:layout_marginRight="42dp"
        android:id="@+id/textView4"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/textView3"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="42dp"
        android:id="@+id/textView5"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/textView4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"

        android:textSize="15sp"

        android:layout_marginRight="42dp"
        android:id="@+id/textView6"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="42dp"
        android:id="@+id/textView7"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/textView6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54min"

        android:textSize="15sp"

        android:layout_marginRight="42dp"
        android:id="@+id/textView8"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/textView7"/>


    <com.seanshend.view.chairview.ChairView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:id="@+id/chairView"
        android:layout_below="@+id/test"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="AUTO"
        android:id="@+id/button1"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/chairView"
        android:background="@drawable/btn_shape1"
        android:layout_alignParentStart="true"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignBaseline="@+id/r1"
            android:layout_alignParentStart="true">
            <ImageButton
                android:layout_marginLeft="35dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:id="@+id/button2"
                android:layout_marginRight="50dp"

                android:background="@drawable/home2"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/button2"
                android:layout_marginRight="50dp"
                android:id="@+id/button3"
                android:background="@drawable/data1"
                android:onClick="GoData"

                />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/button3"
                android:id="@+id/button4"
                android:onClick="GoSetting"
                android:background="@drawable/setting1"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/button4"
                android:layout_marginRight="40dp"
                android:id="@+id/button5"
                android:background="@drawable/user1"
                android:onClick="GoProfile"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
