<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_auto2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seanshend.myapplication.Auto2"
    android:orientation="vertical"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Amazing"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_alignParentLeft="true"
            android:onClick="Back"
            android:textSize="14sp"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="1h 30min"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginBottom="16dp"
        android:background="#EEEEEE"
        >

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/RoundImage1"
            android:layout_marginTop="25dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/textView1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/test"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:background="#EEEEEE">
            <com.seanshend.view.chairview.ChairView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_width="120dp"
                android:id="@+id/Back"
                android:layout_height="100dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Back"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Back"
                android:id="@+id/tv2"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv2"
                android:textSize="15sp"

                android:text="15"

                android:gravity="center_horizontal"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"

            android:background="#EEEEEE">

            <com.seanshend.view.chairview.ChairView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_width="120dp"
                android:id="@+id/Front"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Front"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Seat"
                android:id="@+id/tv4"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv4"
                android:textSize="15sp"

                android:text="60"

                android:gravity="center_horizontal"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_marginTop="20dp"
            android:id="@+id/progressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:max="90"
            android:progress="90"
            android:layout_marginRight="8dp"
            android:progressDrawable="@drawable/progressbar"
            android:onClick="start"
            android:visibility="visible"/>

        <TextView
            android:onClick="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="START"
            android:layout_alignTop="@+id/progressBar"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="152dp"
            android:paddingTop="5dp"
            android:id="@+id/tv1"

            android:textColor="#ffffff"
            android:layout_alignBottom="@+id/progressBar" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:paddingBottom="8dp"
        android:gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignBaseline="@+id/r1"
            android:layout_alignParentStart="true">
            <ImageButton
                android:layout_marginLeft="35dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:id="@+id/button2"
                android:layout_marginRight="50dp"
                android:onClick="GoHome"
                android:background="@drawable/home1"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:onClick="GoData"
                android:layout_toRightOf="@+id/button2"
                android:layout_marginRight="50dp"
                android:id="@+id/button3"
                android:background="@drawable/data1"

                />
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="50dp"
                android:layout_toRightOf="@+id/button3"
                android:id="@+id/button4"
                android:background="@drawable/setting2"/>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="wrap_content"

                android:layout_toRightOf="@+id/button4"
                android:layout_marginRight="40dp"
                android:id="@+id/button5"
                android:background="@drawable/user1"
                android:onClick="GoProfile"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
