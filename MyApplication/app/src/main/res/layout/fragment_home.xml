<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <com.seanshend.view.pieview.PieView
        android:layout_width="100dp"
        android:layout_height="210dp"
        android:id="@+id/pieView"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="changeType"/>

    <com.seanshend.view.CustomFontTextView.CustomFontTextView
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="To bend forward and down from the backmiddle of the back"
        android:textSize="15sp"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/pieView"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Back"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="42dp"
        android:id="@+id/textView3"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/pieView"/>
    <com.seanshend.view.CustomFontTextView.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"

        android:textSize="12sp"

        android:layout_marginRight="42dp"
        android:id="@+id/backDegreeTv"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/textView3"
        android:textColor="#000000"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="42dp"
        android:id="@+id/textView5"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/backDegreeTv"
        android:textColor="#000000"/>
    <com.seanshend.view.CustomFontTextView.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30"
        android:textColor="#000000"
        android:textSize="12sp"

        android:layout_marginRight="42dp"
        android:id="@+id/seatDegreeTv"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/textView5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="42dp"
        android:id="@+id/textView7"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/seatDegreeTv"/>

    <com.seanshend.view.CustomFontTextView.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#000000"
        android:layout_marginRight="42dp"
        android:id="@+id/timeTv"
        android:layout_alignRight="@+id/chairView"
        android:layout_below="@+id/textView7"/>


    <com.seanshend.view.chairview.ChairView
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:id="@+id/chairView"
        android:layout_below="@+id/pieView"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="AUTO"
        android:layout_below="@+id/chairView"
        android:layout_marginTop="50dp"
        android:id="@+id/button1"

        android:background="@drawable/btn_shape1"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="HomePage"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
